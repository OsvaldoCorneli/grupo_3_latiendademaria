<html lang="es">
    <head>
        <%- include('./partials/head.ejs') %>
        <link href="\css\browser.css" rel="stylesheet"/>
    </head>
    <body>
        <%- include('./partials/navbar.ejs') %>
        <main>
            <section class="filter">
                <form action="/browser" method="POST">
                <p>Filtros</p>
                <label for="categoria">Categoria:</label>
                <select id="categoria" name="category">
                    <% for (let i in categorias) { %>
                    <option value=<%= categorias[i] %>><%= categorias[i] %></option>
                    <% } %>
                </select>
                <label for="price">Precio menor a:</label>
                <span class="filter-price" id="price">
                    <label>Todos
                        <input type="radio" name="price" value="999999"/>
                    </label>
                    <label>$5.000
                        <input type="radio" name="price" value="5000"/>
                    </label>
                    <label>$10.000
                        <input type="radio" name="price" value="10000"/>
                    </label>
                    <label>$50.000
                        <input type="radio" name="price" value="50000"/>
                    </label>
                </span>
                <input type="submit" value="ENVIAR"/>
            </form>
            </section>
            <span class="productos">
            <section class="pagination">
                <span><a class="arrow-prev1 arrow-cards"></a></span>
                <span><a>1</a></span>
                <span><a>2</a></span>
                <span><a>3</a></span>
                <span><a>4</a></span>
                <span><a>5</a></span>
                <span><a class="arrow-next1 arrow-cards"></a></span>
            </section>
            <section class="cards">
                <% for (let i in productos) { let { image, price, name } = productos[i] %>
                    <article>
                        <a href="/detail"><img src= <%= image %> alt=<%= name %>/></a>
                        <p><%= price %></p>
                        <p><%= name %></p>
                    </article>
                <% } %>
            </section>
        </span>
        </main>
        <%- include('./partials/footer.ejs') %>
    </body>
</html>
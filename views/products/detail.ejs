<html lang="es">
    <head>
        <%- include('../partials/head.ejs') %>
        <link href="\css\detalle.css" rel="stylesheet"/>
        <title>La tienda de Maria</title>
    </head>
<body>
    <%- include('../partials/navbar.ejs') %>
    <main>
        <% let { id, name, image, price ,stock, description, color } = detalle; %>
        <article>
            <div class="imagenes">
                <% for (let i in image) { %>
                    <img src="<%= image[i] %>" alt="imagen<%= i+1 %>">
                <% } %>
            </div>
    
            <img class="detalle" src="<%= image[0] %>" alt="<%= name %>">
    
            <form class="form-detalle" action="/user/cart/<%= id %>" method="POST">
                <h2 class="tittled"><%= name %></h2>
                <h2 class="precio">$<%= price %></h3>
                <h5>stock disponible: <%= stock %></h5>
                <label for="cantidad">
                    <a onclick="this.parentNode.querySelector('input[type=number]').stepDown()">-</a>
                    <input id="cantidad" type="number" min="1" placeholder="cantidad" name="cantidad" value="1"/>
                    <a onclick="this.parentNode.querySelector('input[type=number]').stepUp()">+</a>
                </label>
                <span class="color"> Color:
                <% color.forEach(element => { let background = `background-color:${element};color:${element};border-radius:50%; border:0.1px-solid-black;;` %>
                    <label for=<%= element %>><i style=<%= background %>>oo</i></label>
                    <input id=<%= element %> type="radio" name="color" value=<%= element %>/>
                <% })%>
                </span>
                <button type="submit">Agregar a carrito</button>
            </form>
            
        </article>
        
        <div class="contenedordescription">
            <h3>Descripcion:</h3>
            <p><%= description %></p> 
        </div>
    </main>
        
            <%- include('../partials/footer.ejs') %>
</body>
</html>
<html lang="es">
    <head>
        <%- include('./partials/head.ejs') %>
        <link href="\css\contacto.css" rel="stylesheet"/>
    </head>
    <body>
        <%- include('./partials/navbar.ejs') %>
        <main class="contacto">
            <span>
            <span class="titulo">
                <p>Contacto</p>
                <i class="fa-sharp fa-solid fa-paper-plane"></i>
            </span>
            <form class='form-contacto' action="/contacto" method="POST">
                <label for="nombre">Nombre:</label>
                <input 
                    id="nombre" 
                    type="text" 
                    name="nombre" 
                    placeholder="Ingresa tu nombre"
                />
                <label for="email">E-mail:</label>  
                <input 
                    id="email" 
                    type="email" 
                    name="email" 
                    placeholder="Ingresa tu email" 
                    required
                />
                
                   <label for="tipo">Tipo:</label>
                <span id="tipo">
                    <label for="administrativo">Administrativo
                    <input type="radio" name="tipo" id="administrativo" value="administrativo"/></label>
                    <label for="comercial">Comercial
                    <input type="radio" name="tipo" id="comercial" value="comercial"/></label>
                    <label for="sugerencia">Sugerencia
                    <input type="radio" name="tipo" id="sugerencia" value="sugerencia"/></label>
                    <label for="otros">Otros
                    <input type="radio" name="tipo" id="otros" value="otros"/></label>
                </span>
              
                <label for="motivo">Motivo:</label>
                <input
                    id="motivo"
                    type="text"
                    name="motivo"
                    placeholder="Ingresa tu nombre"
                    required
                />
                <label for="descripcion">Descripcion: </label>
                    <textarea id="descripcion" type="text" name="descripcion" placeholder="Ingresa una descripcion"></textarea>
               
                <button type="submit">Enviar</button>
            </form>

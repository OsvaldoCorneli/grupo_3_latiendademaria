<html lang="es">
    <head>
        <%- include('./partials/head.ejs') %>
        <link href="\css\home.css" rel="stylesheet"/>
    </head>
<body>
    <main>
        <nav>
            <span>
                <img class="logo" src="\images\4F5FA3DA-7648-4C42-B5F2-B01A0BA7C902.png"/>
                <img class="logoLargo" src="\images\F41CA9F5-CC6B-4EF0-8A80-8769A56E7D89 (1).png" alt="La Tienda de Maria"/>
                <span class="loginNavbar">
                    <ul>
                        <li><a href="/cart"><i class="fa-solid fa-cart-shopping"></i></a></li>
                        <li><a href="/profile"><i class="fa-solid fa-user"></i></a></li>
                    </ul>
                    <button><a href="/login">Ingres√°</a></button>
                </span>
            </span>
            <div class="site">
                <ul>
                    <li><a href="/">Inicio</a></li>
                    <li><a href="/browser">Productos</a></li>
                    <li><a href="/about">Conocenos</a></li>
                    <li><a href="/contacto">Contacto</a></li>
                    <li><a href="/autor">Sobre Mi</a></li>
                </ul>
                <div class="burger-menu">
                    <i class="fa-solid fa-bars"></i>
                </div>
            </div>
        </nav>
        <section class="carousel">
            <span id="item-1"></span>
            <span id="item-2"></span>
            <span id="item-3"></span>
            <div class="carousel-item item-1">
                <a href="#item-3" class="arrow-prev arrow"></a>
                <a href="#item-2" class="arrow-next arrow"></a>
            </div>
            <div class="carousel-item item-2">
                <a href="#item-1" class="arrow-prev arrow"></a>
                <a href="#item-3" class="arrow-next arrow"></a>
            </div>
            <div class="carousel-item item-3">
                <a href="#item-2" class="arrow-prev arrow"></a>
                <a href="#item-1" class="arrow-next arrow"></a>
            </div>

        </section>
        <section class="productos">
                <p>Tienda/Productos</p>
                <ul>
                    <li><img src="/images/Taza.png" alt="img taza"/><a href="">Tazas</a></li>
                    <li><img src="/images/mate.png" alt="img mate"/><a href="">Mates</a></li>
                    <li><img src="/images/paletaPintura.png" alt="img ilustracion"/><a href="">Ilustraciones</a></li>
                </ul>
            <section class="cards">
                <% for (let i in sublimados) { let { id, image, price, name } = sublimados[i]; %>
                    <article>
                        <a href="/detail"><img src= <%= image %> alt=<%= name %>/></a>
                        <p><%= price %></p>
                        <p><%= name %></p>
                    </article>
                <% } %>
            </section>
        </section>
        <section class="lineaArtesanal">
            <p>Linea 100% Artesanal</p>
            <ul>
                <li><img src="/images/mate.png" alt="img mate"/><a href="">Mates</a></li>
                <li><img src="/images/paletaPintura.png" alt="img ilustracion"/><a href="">Cuadros</a></li>
            </ul>
            <section class="cards">
                <% for (let i in artesanales) { let { id, name, image, price } = artesanales[i] %>
                <article>
                    <a href="/detail"><img src= <%= image %> alt=<%= name %>/></a>
                    <p><%= price %></p>
                    <p><%= name %></p>
                </article>
                <% } %>
            </section>
        </section>
        <p class="servParroquias">Servicio para parroquias</p>
    </main>
    <%- include('./partials/footer.ejs') %>
</body>
</html>

<h3>Mis Datos</h3>
<section class="profile">
    <% let { id, nombre, apellido, email, calle, calleNumero, provincia, imagen, codigoPostal, piso, departamento } = userData %>
    <span>
        <img class="perfil" src="<%= imagen %>" alt="<%= nombre.slice(0,1).toUpperCase()+apellido.slice(0,1).toUpperCase() %>"/>
    </span>
    <span class="userData">
        <div>
            <b>Nombre:</b> 
            <t><%= nombre %>, <%= apellido %></t>
        </div>
        <div>
            <b>email:</b>
            <t><%= email %></t>
        </div>
        <div><b>Provincia:</b> <%= provincia %></div>
        <div><b>Domicilio:</b> <%= calle %> <%= calleNumero %> </div>
        <% if (piso) { %>
            <div><b>Piso:</b> <%= piso %></div>
        <% } %>
        <% if (departamento) { %>
            <div><b>Departamento:</b> <%= departamento %></div>
        <% } %>

        <p>Codigo Postal: <%= codigoPostal %></p>
        <a href="/users/<%= id %>/update"><button class="edit">Editar</button></a>
        <button class="delete" onclick="eliminarUsuario('<%= id %>')" >Eliminar Cuenta</button>
        <input type="password" id="inputPassword" placeholder="Ingrese su contraseÃ±a" />
    </span>
</section>
<section class="userData">
    <%- include('./userPayments.ejs', {historialPagos}) %>
    <%- include('./userFavorites.ejs',{favoritos}) %>
</section>
<script src="\scripts\profileCommon.js"></script>